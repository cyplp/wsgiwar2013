<metal:main use-macro="load: layout.pt" >
  <div class="span9" metal:fill-slot="content">
    <h1 i18n:translate=''>Change Password</h1>

    <form action="${request.route_path('changePassword')}" \
        method="POST" enctype="multipart/form-data">

    <div class="row">
      <label class="span2" for="initPassword" i18n:translate=''>
          Initial
      </label>
      <input class="span4" type="password" name="initPassword" \
      id="initPassword" />
    </div>

     <div class="row">
      <label class="span2" for="newPassword" i18n:translate=''>
          New
      </label>
      <input class="span4" type="password" name="newPassword" \
      id="newPassword" />
    </div>

     <div class="row">
      <label class="span2" for="confirmPassword" i18n:translate=''>
          Confirm
      </label>
      <input class="span4" type="password" name="confirmPassword" \
      id="confirmPassword" />
    </div>

    <div class="row">
      <input class="span3 btn btn-success" type="submit" name="submmit" \
      id="submit" i18n:translate='' value='Change my password'></input>
    </div>
    </form>

  </div>
</metal:main>
