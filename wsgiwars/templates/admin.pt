<metal:main use-macro="load: layout.pt" >
  <div class="span9" metal:fill-slot="content">
      <h1 i18n:translate=''>Admin</h1>
      <article>
<table>
 
   <thead>
       <tr>
           <th>Username</th>
           <th>Name</th>
           <th>Description</th>
           <th>Admin</th>
           <th>delete</th>
       </tr>
   </thead>
 
   <tbody tal:repeat="user users">
       <tr>
           <td><a href="${request.route_path('admin_user',user=user._id)}">${user._id}</a></td>
           <td>${user.name}</td>
           <td>${user.description}</td>
           <td><input type="checkbox" name="choix" />${user.is_admin}</td>
           <td><a href="${request.route_path('delete_user',user=user._id)}">delete </a></td>
       </tr>
   </tbody>
</table>
      </article>
  </div>
</metal:main>
