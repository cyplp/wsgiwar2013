<metal:main use-macro="load: layout.pt" >
  <div class="span9" metal:fill-slot="content">
    <article tal:repeat="link links">
      <div class="link">
	<div class="row">
	  <a class="span7" href="${link.url}">${link.url}</a>
	  <span class='span2'>
	    <i class="icon-minus"></i>
	    <a href="${request.route_path('user', userid=link.userID)}">
	      ${link.username}
	    </a>
	  </span>
	</div>
	<div class="row">
	  <a tal:repeat="tag link.tags" href="${request.route_path('tag', tag=tag)}">${tag}</a>
	</div>
	<div class="row">
	  <p class="span7"><pre>${link.comment.strip()}</pre></p>
	</div>
      </div>
    </article>
  </div>
</metal:main>
