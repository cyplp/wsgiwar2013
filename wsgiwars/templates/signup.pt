<metal:main use-macro="load: layout.pt" >
  <div class="span9" metal:fill-slot="content">
    <h1 i18n:translate=''> Sign up !</h1>

    <form action="${request.route_path('submitSignup')}" method="POST" enctype="multipart/form-data">
    <div class="row">
      <label class="span2" for="login" i18n:translate=''>Login :</label>
      <input class="span4" type="text" name="login" id="login" />
    </div>

    <div class="row">
      <label class="span2" for="name" i18n:translate=''>Name :</label>
      <input class="span4" type="text" name="name" id="name" />
    </div>

    <div class="row">
      <label class="span2" for="email" i18n:translate=''>Email :</label>
      <input class="span4" type="email" name="email" id="email" />
    </div>

     <div class="row">
      <label class="span2" for="password" i18n:translate=''>password :</label>
      <input class="span4" type="password" name="password" id="password" />
    </div>

     <div class="row">
      <label class="span2" for="confirmPassword" i18n:translate=''>confirm password :</label>
      <input class="span4" type="password" name="confirmPassword" id="confirmPassword" />
    </div>

    <div class="row">
      <label class="span2" for="avatar" i18n:translate=''>Avatar :</label>
      <input class="span4" type="file" name="avatar" id="avatar" />
    </div>

    <div class="row">
      <label class="span2" for="description" i18n:translate='' >Description :</label>
      <textarea class="span4" row="5" placeholder="just a raw text...">
      </textarea>
    </div>

    <div class="row">
      <p i18n:translate='' class='span4'>An confirmation email 'll be sent to you soon. Please click on the link for confirm your inscription</p>
    </div>

    <div class="row">
      <input class="span3 btn btn-success" type="submit" name="submmit" id="submit" i18n:translate='' value='Sign up now !'></input>
    </div>
    </form>

  </div>
</metal:main>
